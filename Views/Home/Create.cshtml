@model WeddingPlanner.Models.Wedding

<form action="ProcessCreateWedding" method="post">
    <div class="form-group">
      <label asp-for="WedderOne"></label>
      <input asp-for="WedderOne">
    </div>
    <div class="form-group">
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo">
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date">
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address">
    </div>       
    <input asp-for="CreatedByUserId" hidden value="@ViewBag.UserId">
    <button type="submit">Add</button>      
</form>